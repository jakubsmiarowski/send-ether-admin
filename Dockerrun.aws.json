{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [{
    "environment": [
      {
        "name": "POSTGRES_PASSWORD",
        "value": "Warszawa1234"
      }
    ],
    "essential": true,
    "image": "postgres:alpine",
    "memory": 100,
    "mountPoints": [{
      "containerPath": "/var/lib/postgresql/data/",
      "sourceVolume": "postgres_data"
    }],
    "name": "postgres",
    "portMappings": [{
      "containerPort": 5432,
      "hostPort": 5432
    }]
  },
    {
      "essential": true,
      "image": "jakubsmiarowski/send-ether-admin_server",
      "memory": 100,
      "name": "server",
      "portMappings": [{
        "containerPort": 5000,
        "hostPort": 5000
      }]
    },
    {
      "essential": true,
      "name": "client",
      "image": "jakubsmiarowski/send-ether-admin_client",
      "memory": 100,
      "portMappings": [{
        "containerPort": 3000,
        "hostPort": 3000
      }]
    }
  ],
  "volumes": [{
    "host": {
      "sourcePath": "./data:/var/lib/postgresql/data"
    },
    "name": "postgres_data"
  }
  ]
}
